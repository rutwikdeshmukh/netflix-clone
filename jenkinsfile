pipeline {
    agent any
    environment {
        AWS_ACCOUNT_ID = '956630439322'
        AWS_DEFAULT_REGION = 'ap-south-1'
        API_KEY = '7975259a1710981340754da567bc7579'
    }

    // Retrieve an authentication token and authenticating docker client with registry
    stages  {
        stage('CLEANUP') {
                steps {
                    deleteDir()
                }
        }

        stage('AUTHENTICATING DOCKER CLIENT WITH AWS ECR') {
                steps {
                    script {
                    sh "aws ecr get-login-password --region ${AWS_DEFAULT_REGION} | docker login --username AWS --password-stdin ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com"
                    }
                }
        }

        // Cloning into source code repository
        stage('GIT CLONE') {
            steps {
                sh 'git clone https://github.com/rutwikdeshmukh/netflix-clone.git'
            }
        }

        stage('CHANGING THE WORKING DIRECTORY') {
            steps {
                dir('/var/lib/jenkins/workspace/CI-Build-and-ECR-Push/netflix-clone/') {
                    sh 'ls'
                    sh 'pwd'
                }
            }
        }

        // Building the docker images
        stage('Building image') {
            steps {
                script {
                    dir('/var/lib/jenkins/workspace/CI-Build-and-ECR-Push/netflix-clone/') {
                        envsubst <Dockerfile> dockerfile
                        sh 'docker build -t netflix-clone .'
                    }
                }
            }
        }

        // Tagging the docker image
        stage('TAGGING IMAGE') {
            steps {
                script {
                    dir('/var/lib/jenkins/workspace/CI-Build-and-ECR-Push/netflix-clone/') {
                        sh 'docker tag netflix-clone:latest 956630439322.dkr.ecr.ap-south-1.amazonaws.com/netflix-clone:netflix-clone-latest'
                    }
                }
            }
        }

        // Pushing the Docker image to ECR
        stage('PUSH TO ECR') {
            steps {
                script {
                    dir('/var/lib/jenkins/workspace/CI-Build-and-ECR-Push/netflix-clone/') {
                        sh 'docker push 956630439322.dkr.ecr.ap-south-1.amazonaws.com/netflix-clone:netflix-clone-latest'
                    }
                }
            }
        }
    }
}
// Is webhook working?